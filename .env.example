# Application Security
SECRET_KEY=your-secure-random-key-here
ADMIN_PASSWORD=change-this-in-production

# Google Sheets Configuration
GOOGLE_SHEETS_ID=your-sheets-id-here
GOOGLE_CREDENTIALS_JSON={"type": "service_account", ...}

# Server Configuration
PORT=5000
FLASK_DEBUG=false
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# Cache Configuration
CACHE_DURATION=300
SESSION_TIMEOUT=3600

# Background Sync
ENABLE_BACKGROUND_SYNC=false  # Set true only for worker process
SYNC_INTERVAL=300  # 5 minutes

# Teacher Passwords (if using environment auth)
TEACHER_ECE_PASSWORD=strong-password-1
TEACHER_I_PASSWORD=strong-password-2
TEACHER_II_PASSWORD=strong-password-3
TEACHER_III_PASSWORD=strong-password-4
TEACHER_IV_PASSWORD=strong-password-5
TEACHER_V_PASSWORD=strong-password-6
TEACHER_VI_PASSWORD=strong-password-7
TEACHER_VII_PASSWORD=strong-password-8
TEACHER_VIII_PASSWORD=strong-password-9
TEACHER_IX_PASSWORD=strong-password-10
